datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model History {
  id            String     @id @default(cuid())
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  operationDate DateTime?
  operation     Operation? @relation(fields: [operationId], references: [id])
  operationId   String?
  user          User?      @relation(fields: [userId], references: [id])
  userId        String?
}

model Operation {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  operand1  Float?
  result    Float?
  operand2  Float?
  typeField String?
  histories History[]
}

model User {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  firstName String?
  lastName  String?
  username  String    @unique
  email     String?   @unique
  password  String
  roles     Json
  histories History[]
}
